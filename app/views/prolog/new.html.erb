<div class="dark:bg-gray-600">
  <div class="max-w-3xl mx-auto pt-12 pb-12 px-4">
    <h1 class="text-3xl font-bold text-center dark:text-cyan-100 mb-8">Wpisz kod w Prologu</h1>
    <div class="bg-gray-100 p-6 rounded-lg shadow-md">
      <%= form_with url: prolog_execute_path, method: :post, local: true, data: { turbo: false } do |form| %>
        <div class="mb-4">
          <%= form.label :code, "Kod Prologa", class: "block text-lg font-medium text-gray-800 mb-2" %>
          <%= text_area_tag 'code', @user_input, rows: 15, class: "w-full p-4 border border-gray-300 rounded-lg shadow-sm font-mono focus:outline-none focus:ring-2 focus:ring-indigo-500" %>
        </div>
        <div class="text-center">
          <%= form.submit "Wykonaj", class: "bg-indigo-600 hover:bg-indigo-700 text-white font-semibold py-2 px-6 rounded-xl shadow-md transition duration-200" %>
        </div>
      <% end %>
    </div>
  </div>
</div>
